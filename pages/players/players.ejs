<section id="mainSection">
    <h1 class="d-none">
        <a href="/" data-navigo>Frontend structure</a>
    </h1>
    <ul class="d-none">
        <li><a href="/about" data-navigo>About</a></li>
        <li><a href="/login" data-navigo>Getting data from a form</a></li>
        <li><a href="/users" data-navigo>Users</a></li>
        <li><a href="/update" data-navigo>Update</a></li>
    </ul>

    <div class="row">
        <div class="col-md-12 mt-5">
            <div class="card rounded-0 border-0">
                <div class="card-header rounded-0">
                    <h5 class="card-title text-white text-center" data-trans="playersTitle">Players List</h5>
                </div>
                <div class="card-body">
                    <div class="table-area">
                        <table class="table text-center">
                            <thead>
                                <tr>
                                    <th scope="col" data-trans="wordName">Name</th>
                                    <th scope="col" data-trans="wordClass">Class</th>
                                    <th scope="col">Map</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody id="playersList">
                                <% if(players.length != 0) { %>
                                    <% players.forEach(function(player) { %>
                                    <tr>
                                        <td><%= player.Name %></td>
                                        <td><%= player.ClassName %></td>
                                        <td><%= player.MapName %></td>
                                        <td>
                                            <a class="btn btn-primary text-decoration-none" href="/player/<%= player.Name %>" data-navigo data-trans="seeCharacter">
                                                See character
                                            </a>
                                        </td>
                                    </tr>
                                    <% }) %>
                                <% }else{ %>
                                    <tr>
                                        <td colspan="12">No Data</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>

                    <% if(pages != 0) { %>
                        <select name="pagesList" id="pageList" class="form-control">
                            <option value="pageList" data-trans="pagesList">Pages List</option>
                            <% for (let index=0; index < pages; index++) {%>
                            <option value="<%= index %>">
                                <%= index + 1 %>
                            </option>
                            <% } %>
                        </select>
                      <% } %>
                    
                    <% if(pages != 0) { %>
                        
                        <nav aria-label="Page navigation example">
                            <ul class="pagination mb-0">
                            <% for (let index = 0; index < pages; index++) {%>
                            <li class="page-item rounded-0">
                                <a class="page-link number-page rounded-0" href="/accounts/pages/<%= index %>" data-navigo>
                                    <%= index + 1 %>
                                </a>
                            </li>
                            <% } %>
                            
                            </ul>
                        </nav>
                      <% } %>
                </div>
            </div>
        </div>
    </div>

</section>