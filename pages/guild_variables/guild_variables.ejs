<section id="mainSection">
    <div class="row">
        <div class="col-md-12">
            
            <div class="card rounded-0 border-0">
                <div class="card-header rounded-0">
                    <h5 class="card-title text-white text-center" id="username">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><span data-trans="wordGuild">Guild</span> : <%= guild.Name %></span>
                            <span><span data-trans="guildFoundingDate">Founding : </span>
                                <%= guild.FoundingDate %>
                            </span>
                        </li>
                    </h5>
                </div>
                <ul id="guildNav" class="nav justify-content-center">
                    <li class="nav-item">
                        <a class="nav-link text-white" data-trans="wordMember" id="membersLink" data-url="/guild/<%= guild.Id %>/pages/0">
                            Members
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white active" id="variablesLink" data-url="/guild/variables/<%= guild.Id %>">
                            Variables
                        </a>
                    </li>
                </ul>
                <div class="card-body">
                    <% if (displayNotification) { %>
                        <div class="col-12 mb-3">
                            <%- notification %>
                        </div>
                        <% } %>
                    <div class="table-area">
                        <table class="table text-center">
                            <thead>
                                <tr>
                                    <th scope="col" data-trans="wordName">Name</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody id="usersList">
                                <% if(variables.length != 0) { %>
                                    <% variables.forEach(function(variable) { %>
                                    <tr>
                                        <td><%= variable.VariableName %></td>
                                        <td>
                                            <!-- Boolean -->
                                            <% if(variable.Type == 1) { %>
                                                <form class="variableForm d-flex" data-variable="<%= variable.VariableId %>" data-type="<%= variable.Type %>">
                                                    <select class="form-control rounded-0" name="variable-<%= variable.VariableId %>" id="variable-<%= variable.VariableId %>">
                                                        <option value="true" <% if(variable.Value == true) { %>selected<% } %>>True</option>
                                                        <option value="false" <% if(variable.Value == false) { %>selected<% } %>>False</option>
                                                    </select>
                                                    <button type="submit" class="btn btn-sm btn-primary rounded-0">Edit</button>
                                                </form>
                                            <% } %>

                                            <!-- Integer -->
                                            <% if(variable.Type == 2) { %>
                                                <form class="variableForm d-flex" data-variable="<%= variable.VariableId %>" data-type="<%= variable.Type %>">
                                                    <input type="number" min="0" max="999" name="variable-<%= variable.VariableId %>" id="variable-<%= variable.VariableId %>" class="form-control rounded-0" value="<%= variable.Value %>">
                                                    <button type="submit" class="btn btn-sm btn-primary rounded-0">Edit</button>
                                                </form>
                                            <% } %>

                                            <!-- String -->
                                            <% if(variable.Type == 3) { %>
                                                <form class="variableForm d-flex" data-variable="<%= variable.VariableId %>" data-type="<%= variable.Type %>">
                                                    <input type="string" min="0" max="999" name="variable-<%= variable.VariableId %>" id="variable-<%= variable.VariableId %>" class="form-control rounded-0" value="<%= variable.Value %>">
                                                    <button type="submit" class="btn btn-sm btn-primary rounded-0">Edit</button>
                                                </form>
                                            <% } %>
                                        </td>
                                    </tr>
                                    <% }) %>
                                <% }else{ %>
                                    <tr>
                                        <td colspan="12">No Data</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                    

                    <% if(pages != 0) { %>
                        <select name="pagesList" id="pageList" class="form-control">
                            <option value="pageList" data-trans="pagesList">Pages List</option>
                            <% for (let index=0; index < pages; index++) {%>
                            <option value="<%= index %>">
                                <%= index + 1 %>
                            </option>
                            <% } %>
                        </select>
                      <% } %>
                </div>
            </div>
        </div>
    </div>
</section>