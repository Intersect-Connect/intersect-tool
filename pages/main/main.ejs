<section id="mainSection">
    <h1 class="d-none">
        <a href="/" data-navigo>Frontend structure</a>
    </h1>
    <ul class="d-none">
        <li><a href="/about" data-navigo>About</a></li>
        <li><a href="/login" data-navigo>Getting data from a form</a></li>
        <li><a href="/users" data-navigo>Users</a></li>
        <li><a href="/update" data-navigo>Update</a></li>
    </ul>

    <div class="row">
        <div class="col-md-6 mt-3">
            <div class="card rounded-0 border-0">
                <div class="card-header text-center rounded-0 border-0">
                    <h5 class="card-title text-white text-center">CPS</h5>
                </div>
                <div class="card-body text-center">
                    <h3>96</h3>
                </div>
            </div>
        </div>
        <div class="col-md-6 mt-3">
            <div class="card rounded-0 border-0">
                <div class="card-header text-center rounded-0 border-0">
                    <h5 class="card-title text-white text-center">UPTIME</h5>
                </div>
                <div class="card-body text-center">
                    <h3><%= uptime %></h3>
                </div>
            </div>
        </div>
        <div class="col-md-12 mt-5">
            <div class="card rounded-0 border-0">
                <div class="card-header rounded-0">
                    <h5 class="card-title text-white text-center">Online List (<span id="onlineCount"><%= stat.onlineCount %></span>)</h5>
                </div>
                <div class="card body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col" data-trans="wordName">Name</th>
                                <th scope="col" data-trans="wordClass">Class</th>
                                <th scope="col">Map</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody id="onlineList">
                            <% if (stat.onlineCount == 0) { %>
                                <tr>
                                    <td colspan="12">No players online</td>
                                </tr>
                            <% }else{ %>
                                <% playersList.forEach(function(player) { %>
                                    <tr>
                                        <td><%= player.Name %></td>
                                        <td><%= player.ClassName %></td>
                                        <td><%= player.MapName %></td>
                                        <td>
                                            <a class="btn btn-primary text-decoration-none" href="/account/<%= player.UserId %>" data-navigo data-trans="seeAccount">See Account</a>
                                            <a class="btn btn-primary text-decoration-none" href="/player/<%= player.Name %>" data-navigo data-trans="seeCharacter">See character</a>
                                        </td>
                                    </tr>
                                    <% }) %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</section>