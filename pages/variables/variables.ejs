<section id="mainSection">
    <div class="row">
        <div class="col-md-12 mt-5">
            <div class="card rounded-0 border-0">
                <div class="card-header rounded-0">
                    <h5 class="card-title text-white text-center" data-trans="variablesTitle">Variables List</h5>
                </div>
                <div class="card-body">
                    <% if (displayNotification) { %>
                        <div class="col-12 mb-3">
                            <%- notification %>
                        </div>
                        <% } %>
                    <div class="table-area">
                        <table class="table text-center">
                            <thead>
                                <tr>
                                    <th scope="col" data-trans="wordName">Name</th>
                                    <th scope="col" data-trans="wordFolder">Folder</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody id="usersList">
                                <% if(variables.length != 0) { %>
                                    <% variables.forEach(function(variable) { %>
                                    <tr>
                                        <td><%= variable.Name %></td>
                                        <td>
                                            <% if(variable.Folder == "") { %>
                                                <span data-trans="noFolder">No folder</span>
                                            <% }else{ %>
                                                <%= variable.Folder %>
                                            <% } %>
                                        </td>
                                        <td>
                                            <!-- Boolean -->
                                            <% if(variable.Type == 1) { %>
                                                <form class="variableForm d-flex" data-variable="<%= variable.Id %>" data-type="<%= variable.Type %>">
                                                    <select class="form-control rounded-0" name="variable-<%= variable.Id %>" id="variable-<%= variable.Id %>">
                                                        <option value="true" <% if(variable.Value == true) { %>selected<% } %>>True</option>
                                                        <option value="false" <% if(variable.Value == false) { %>selected<% } %>>False</option>
                                                    </select>
                                                    <button type="submit" class="btn btn-sm btn-primary rounded-0">Edit</button>
                                                </form>
                                            <% } %>

                                            <!-- Integer -->
                                            <% if(variable.Type == 2) { %>
                                                <form class="variableForm d-flex" data-variable="<%= variable.Id %>" data-type="<%= variable.Type %>">
                                                    <input type="number" min="0" max="999" name="variable-<%= variable.Id %>" id="variable-<%= variable.Id %>" class="form-control rounded-0" value="<%= variable.Value %>">
                                                    <button type="submit" class="btn btn-sm btn-primary rounded-0">Edit</button>
                                                </form>
                                            <% } %>

                                            <!-- String -->
                                            <% if(variable.Type == 3) { %>
                                                <form class="variableForm d-flex" data-variable="<%= variable.Id %>" data-type="<%= variable.Type %>">
                                                    <input type="string" min="0" max="999" name="variable-<%= variable.Id %>" id="variable-<%= variable.Id %>" class="form-control rounded-0" value="<%= variable.Value %>">
                                                    <button type="submit" class="btn btn-sm btn-primary rounded-0">Edit</button>
                                                </form>
                                            <% } %>
                                        </td>
                                    </tr>
                                    <% }) %>
                                <% }else{ %>
                                    <tr>
                                        <td colspan="12">No Data</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                    <% if(pages > 1) { %>
                        <select name="pagesList" id="pageList" class="form-control">
                            <option value="pageList" data-trans="pagesList">Pages List</option>
                            <% for (let index= 0; index < pages; index++) {%>
                            <option value="<%= index %>">
                                <%= index + 1 %>
                            </option>
                            <% } %>
                        </select>
                      <% } %>
                </div>
            </div>
        </div>
    </div>

</section>